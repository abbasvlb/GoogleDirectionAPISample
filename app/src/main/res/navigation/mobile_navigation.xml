<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_map">

    <fragment
        android:id="@+id/nav_map"
        android:name="com.example.gdirectionspoc.ui.map.MapFragment"
        android:label="@string/menu_map"
        tools:layout="@layout/fragment_map" >

        <argument
            android:name="id"
            app:argType="integer"
            android:defaultValue="-1"/>

        <action
            android:id="@+id/action_nav_map_to_nav_locations"
            app:destination="@id/nav_locations" />
    </fragment>

    <fragment
        android:id="@+id/nav_add_location"
        android:name="com.example.gdirectionspoc.ui.addLocation.AddLocationFragment"
        android:label="@string/menu_add_location"
        tools:layout="@layout/fragment_add_location" >

        <action
            android:id="@+id/action_nav_add_location_to_nav_map"
            app:destination="@id/nav_map"/>
    </fragment>

    <fragment
        android:id="@+id/nav_edit_location"
        android:name="com.example.gdirectionspoc.ui.editLocation.EditLocationFragment"
        android:label="@string/menu_edit_location"
        tools:layout="@layout/fragment_edit_location">

        <argument
            android:name="id"
            app:argType="integer"
            android:defaultValue="1"/>

        <action
            android:id="@+id/action_nav_edit_location_to_nav_map"
            app:destination="@id/nav_map" />

    </fragment>

    <fragment
        android:id="@+id/nav_locations"
        android:name="com.example.gdirectionspoc.ui.locations.LocationsFragment"
        android:label="@string/menu_locations"
        tools:layout="@layout/fragment_locations">

        <action
            android:id="@+id/action_nav_locations_to_nav_add_location"
            app:destination="@id/nav_add_location" />
        <action
            android:id="@+id/action_nav_locations_to_nav_edit_location"
            app:destination="@id/nav_edit_location" />
        <action
            android:id="@+id/action_nav_locations_to_nav_map"
            app:destination="@id/nav_map" />
    </fragment>

</navigation>