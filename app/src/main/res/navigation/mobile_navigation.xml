<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_map">

    <fragment
        android:id="@+id/nav_map"
        android:name="com.example.gdirectionspoc.ui.map.MapFragment"
        android:label="@string/menu_map"
        tools:layout="@layout/fragment_map" >
    </fragment>

    <fragment
        android:id="@+id/nav_add_location"
        android:name="com.example.gdirectionspoc.ui.addLocation.AddLocationFragment"
        android:label="@string/menu_add_location"
        tools:layout="@layout/fragment_add_location" >
        <action
            android:id="@+id/action_nav_location_to_nav_map"
            app:destination="@id/nav_map" />
    </fragment>
</navigation>